<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/content_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_filepath_test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="filepath test" />

        <Button
            android:id="@+id/btn_filepath_test_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="filepath test 2" />

        <Button
            android:id="@+id/btn_write_json_test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="write sample json" />

        <Button
            android:id="@+id/btn_get_mimetype_test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="get mime type" />

        <Button
            android:id="@+id/btn_share_file_test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="share file" />
    </LinearLayout>
</ScrollView>